@model List<CustomerListItemVM>


<h2>Customer Index</h2>
<a class="btn btn-primary" asp-action="Create" >New Customer</a>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Sl</th>
            <th>Name</th>
            <th>Code</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Delivery Loc.</th>
            <th>Created By</th>
            <th>Created On</th>
            <th>Last Updated By</th>
            <th>Last Updated On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int slNo = 0; 
        }
        @foreach(var customer in Model)
        {
            <tr>
                <td>@(++slNo)</td>
                <td>@customer.Name</td>
                <td>@customer.Code</td>
                <td>@customer.PhoneNo</td>
                <td>@customer.Address</td>
                <td>@customer.DeliveryLocation</td>
                <td>@customer.CreatedBy</td>
                <td>@customer.CreatedDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                <td>@(customer.LastUpdatedBy ?? "N/A")</td>
                <td>@customer.LastUpdatedDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id"  >Edit</a> |
                    @*<a href="/customer/edit/@customer.Id">Edit</a>*@
                    <a asp-action="Details" asp-route-id="@customer.Id">View</a>

                </td>
            </tr>
        }
    </tbody>

</table>